<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Modulo2B_Meseros</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Modulo2B_Meseros.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ms-5" asp-area="" asp-controller="login" asp-action="Index" style="color: orange;">
                    <i class="fas fa-home me-2"></i>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mesas" asp-action="Index" style="color: #333; padding: 12px; border-radius: 5px; font-weight: 500; display: flex; align-items: center; transition: background 0.3s ease;">Mesas Ocupadas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mesas" asp-action="Index1" style="color: #333; padding: 12px; border-radius: 5px; font-weight: 500; display: flex; align-items: center; transition: background 0.3s ease;">Mesas Disponibles</a>
                        </li>
                    </ul>



                    <a class="nav-link" asp-area="" asp-controller="login" asp-action="Logout" style="color: orange;">
                        <i class="fas fa-sign-out-alt me-1"></i> Cerrar Sesión
                    </a>


                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Modulo2B_Meseros - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <style>
        .nav-link:hover,
        .nav-link.active {
            background: #FF9800;
            color: white !important;
        }
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
