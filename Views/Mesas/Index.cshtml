@{
    ViewData["Title"] = "Mesas Ocupadas";
}

<h1 style="color: orange; font-weight: bold; font-size: 3rem;">Dulce Sabor</h1>

<div class="row">
    <div>
        <h3 style="color: orange;">Mesas Ocupadas</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Mesa</th>
                    <th>Capacidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mesa in (IEnumerable<dynamic>)ViewData["listadoMesasOcupadas"])
                {
                    <tr>
                        <td>Mesa @mesa.numeroMesa</td>
                        <td>@mesa.capacidad</td>
                        <td>
                            @Html.ActionLink("Ver Pedido", "Pedido", new { pedidoId = mesa.pedidoId }, new { @class = "btn btn-lg mt-3", @style = "background-color: orange; color: white;" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
