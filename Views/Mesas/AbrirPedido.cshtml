@{
    ViewData["Title"] = "Abrir Pedido";
}

<h2 style="color: orange; font-weight: bold; font-size: 3rem;">Abrir pedido</h2>

<form asp-action="ConfirmarPedido" method="post">
    <input type="hidden" name="mesaId" value="@ViewData["MesaId"]" />

    <div class="form-group">
        <label>Mesa:</label>
        <input type="text" class="form-control" value="@ViewData["MesaSeleccionada"]" readonly />
    </div>

    <div class="form-group">
        <label>Empleado:</label>
        <input type="text" class="form-control" value="@Context.Session.GetString("Nombre")" readonly />
    </div>

    <div class="form-group">
        <label>Fecha y hora de inicio:</label>
        <input type="text" class="form-control" value="@DateTime.Now.ToString("g")" readonly />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-lg mt-3" style="background-color: orange; color: white;">Abrir Pedido</button>
        <a href="@Url.Action("Index")" class="btn btn-lg mt-3" style="background-color: orangered; color: white;">Cancelar</a>
    </div>
</form>
