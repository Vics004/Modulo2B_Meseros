@{
    Layout = "_miLayout";
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
        <h1 style="color: orange; font-weight: bold; font-size: 3rem;">Dulce Sabor</h1>
        <h3 style="color: orange;">Meseros</h3>

        <div class="w-100" style="max-width: 400px;">
            <div class="p-4 border rounded" style="border-color: lightgray;">
                <form method="post" class="mt-2">
                    <div class="form-group">
                        <label for="txtUsuario" class="d-block fw-bold text-start">Email</label>
                        @Html.TextBox("txtUsuario", "", new { @class = "form-control" })
                    </div>
                    <div class="form-group mt-3">
                        <label for="txtClave" class="d-block fw-bold text-start">Contraseña</label>
                        @Html.Password("txtClave", "", new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-lg mt-3" style="background-color: orange; color: white; width: 100%;">
                        Iniciar sesión
                    </button>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="alert alert-danger mt-3">
                @ViewData["ErrorMessage"]
            </div>
        }
    </div>
</div>


